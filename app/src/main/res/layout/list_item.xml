<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:elevation="90dp"
    android:layout_margin="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#fff">


        <TextView
            android:id="@+id/title_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Permission Title"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/council"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat"
            android:text="COUNCIL"
            android:textStyle="italic"
            android:layout_below="@id/title_permission"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/montserrat"
            android:text="Date"
            android:layout_margin="6dp"
            android:gravity="right"
            android:textColor="#000" />



        <TextView
            android:id="@+id/descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Description"
            android:layout_below="@id/council"
            android:textColor="#000" />

        <TextView
            android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/montserrat"
            android:text="Room No"
            android:layout_below="@id/descr"
            android:textColor="#000" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/montserrat"
            android:text="Time"
            android:layout_below="@id/room"
            android:textColor="#000" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:fontFamily="@font/montserrat"
            android:layout_below="@id/time"
            android:text="Status"
            android:textColor="#000" />


    </RelativeLayout>
    
</androidx.cardview.widget.CardView>